# ============================
# FRONTEND (prefijo VITE_)
# ============================
# Estos valores se exponen en el bundle. Usa llaves de test o dominios de staging.

# Entorno de la app (mantén staging/production alineados)
VITE_APP_ENV=staging
VITE_APP_URL=https://staging.agenthub.com
VITE_RELEASE=staging-placeholder-sha

# Supabase (mismos valores que producción para detectar diferencias)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Stripe (Frontend)
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_or_live_key_here

# Observabilidad (Sentry CDN + muestreo)
VITE_SENTRY_DSN=https://your-sentry-dsn
VITE_SENTRY_CDN=
VITE_SENTRY_TRACES_SAMPLE_RATE=0.3
VITE_SENTRY_PROFILES_SAMPLE_RATE=0.1
VITE_SENTRY_ERROR_SAMPLE_RATE=1.0
VITE_SENTRY_REPLAYS_SAMPLE_RATE=0.0
VITE_SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0

# Seguridad / Bots
VITE_TURNSTILE_SITE_KEY=your-turnstile-site-key

# Notificaciones (helpers del dashboard)
VITE_SENDGRID_KEY=your-sendgrid-public-key
VITE_TWILIO_AUTH_TOKEN=your-twilio-auth-token


# ============================
# BACKEND / EDGE FUNCTIONS
# ============================
# Estos secrets NO deben exponerse en el frontend. Defínelos en Supabase Edge
# Functions (Dashboard → Edge Functions → Secrets) o en el entorno del CLI.

# Supabase core (compartidos por la mayoría de funciones)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=super-secret-service-role-key

# Stripe (create-checkout, create-payment-intent, stripe-webhook)
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_BASIC=price_test_basic
STRIPE_PRICE_ULTRA=price_test_ultra

# OpenAI (semantic-search, process-document)
OPENAI_API_KEY=sk-test-openai-key

# Cloudflare (deploy-agent)
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token

# Captcha (verify-captcha)
TURNSTILE_SECRET_KEY=turnstile-secret-key

# MFA (manage-2fa)
TOTP_ENCRYPTION_KEY=totp-encryption-secret

# Emails (send-email, process-email-queue)
SENDGRID_API_KEY=SG.your_sendgrid_key
FROM_EMAIL=noreply@example.com

# Observabilidad en Edge (aplica en _shared/observability)
SENTRY_DSN=https://your-sentry-backend-dsn
SENTRY_TRACES_SAMPLE_RATE=0.2
SENTRY_PROFILES_SAMPLE_RATE=0.05
SENTRY_ERROR_SAMPLE_RATE=1.0
SENTRY_DEBUG=false
RELEASE=edge-staging-sha
MODE=staging
PROM_PUSHGATEWAY_URL=https://pushgateway.example.com
